{
  "name": "@mavnn/codemirror-lang-ink",
  "version": "0.8.0",
  "description": "Ink language support for the CodeMirror code editor",
  "scripts": {
    "pre-gen": "mkdir -p src/generated && lezer-generator src/syntax.grammar -o src/generated/parser",
    "build": "npm run pre-gen && rollup -c",
    "test": "vitest"
  },
  "keywords": [
    "editor",
    "code"
  ],
  "author": {
    "name": "Michael Newton",
    "email": "michael@mavnn.eu",
    "url": "http://bonfire.mavnn.eu/@mavnn"
  },
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.js"
  },
  "types": "dist/src/index.d.ts",
  "module": "dist/index.js",
  "sideEffects": false,
  "license": "MIT",
  "dependencies": {
    "@codemirror/autocomplete": "^6.7.1",
    "@codemirror/language": "^6.3.0",
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "@lezer/common": "^1.3.0",
    "@lezer/highlight": "^1.2.3"
  },
  "devDependencies": {
    "@lezer/generator": "^1.8.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.10.0",
    "rollup": "^4.52.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mavnn/codemirror-lang-ink.git"
  }
}
